# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/playlist-finder
MONGODB_URI_PROD=your_production_mongodb_uri

# Authentication
JWT_SECRET=your_jwt_secret_key
