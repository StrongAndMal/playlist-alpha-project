# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://127.0.0.1:27017/playlist-finder
MONGODB_URI_PROD=your_production_mongodb_uri

# Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Spotify API
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Development Spotify callback
SPOTIFY_REDIRECT_URI=https://your-ngrok-url.ngrok-free.app/api/auth/spotify/callback
# Production Spotify callback - will be used when NODE_ENV=production
SPOTIFY_REDIRECT_URI_PROD=https://your-production-domain.com/spotify-callback

# Frontend URLs
FRONTEND_URL=http://127.0.0.1:5173
FRONTEND_URL_PROD=https://your-production-domain.com

# Logging
LOG_LEVEL=debug 